<%- include('./includes/head.ejs') %>
<body>
  <%- include('./includes/nav.ejs') %>
  <div class="container">

    <h1><%= pageTitle %></h1>
    <form class="blog-form" action="/<% if(editing) { %>edit-blog<% }else{ %>add-blog<% } %>" method="post">
  
      <label for="title">Title</label>
      <input type="text" name="title" value="<% if(editing) { %><%= blog.title%><% } %>" required="required">
      <label for="content">Content</label>
      <textarea name="content" id="" cols="30" rows="10" required="required"><% if(editing) { %><%= blog.content %><% }  %></textarea>
      <!-- <label for="imageUrl">Image url</label> -->
      <!-- <input type="file" for="imageUrl"> -->
      <% if(editing) { %>
        <input type="hidden" value="<%= blog._id %>" name="blogId" />
    <% } %>
      <button type="submit" class="primary-button">Post</button>
    </form>
    <br>
  </div>

</body>
</html>